<div class="container">
  <div class="well">

    



    <h2>Users</h2>


        <table class="table table-default table-bordered">
            <thead>
              <tr>
                <th>Name</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @user.each do |user| %>
              <tr>
                <td><%= user.first_name %></td>
                <td width="10%"><%= button_to add_board_path(user), method: :post, class: 'btn btn-primary', data: {confirm: 'Are you sure you want to add this user to the board?'} do %>Add to board
                <% end %>
                </td>
              </tr>
              <% end %>
            </tbody>
        </table>
      </div>
  </div>
