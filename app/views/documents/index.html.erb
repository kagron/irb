<div class="container-fluid">

  <h1>Documents</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Fname</th>
        <th>Lname</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Address</th>
        <th>Department</th>
        <th>Typeofapplication</th>
        <th>Project title</th>
        <th>Sponsor name</th>
        <th>Start date</th>
        <th>End date</th>
        <th>Research question</th>
        <th>Lit review</th>
        <th>Procedure</th>
        <th>Pool of subjects</th>
        <th>Sub recruitment</th>
        <th>Risks</th>
        <th>Opt participation</th>
        <th>Confidentiality</th>
        <th>Authorities consent</th>
        <th>Subjects consent</th>
        <th>Parental consent</th>
        <th>Advisor sig</th>
        <th>State</th>
        <th>Archived</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @documents.each do |document| %>
        <tr>
          <td><%= document.fName %></td>
          <td><%= document.lName %></td>
          <td><%= document.phone %></td>
          <td><%= document.email %></td>
          <td><%= document.address %></td>
          <td><%= document.department %></td>
          <td><%= document.typeOfApplication %></td>
          <td><%= document.project_title %></td>
          <td><%= document.sponsor_name %></td>
          <td><%= document.start_date %></td>
          <td><%= document.end_date %></td>
          <td><%= document.research_question %></td>
          <td><%= document.lit_review %></td>
          <td><%= document.procedure %></td>
          <td><%= document.pool_of_subjects %></td>
          <td><%= document.sub_recruitment %></td>
          <td><%= document.risks %></td>
          <td><%= document.opt_participation %></td>
          <td><%= document.confidentiality %></td>
          <td><%= document.authorities_consent %></td>
          <td><%= document.subjects_consent %></td>
          <td><%= document.parental_consent %></td>
          <td><%= document.advisor_sig %></td>
          <td><%= document.state %></td>
          <td><%= document.is_archived %></td>
          <td><%= link_to 'Show', document, class: 'btn btn-primary', style: 'color: white'  %></td>
          <td><%= link_to 'Edit', edit_document_path(document), class: 'btn btn-warning', style: 'color: white'  %></td>
          <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger', style: 'color: white'  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Document', new_document_path, class: 'btn btn-default' %>

</div>
